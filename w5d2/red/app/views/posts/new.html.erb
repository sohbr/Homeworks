<h1>New Post</h1>

  <form action=" <%= posts_url %>" method="post">

    <%= auth_token %>

    <label>Title
      <input type="text" name="post[title]" value="">
    </label>

    <label>URL
      <input type="text" name="post[url]" value="">
    </label>

    <label>Content
      <textarea type="textarea" name="post[content]"><%= @post.content %></textarea>
    </label>

    <input type="hidden" name="post[sub_ids][]" value="">
    <br><br>
    SUBS
     <% Sub.all.each do |sub| %>
      <br>
       <label>
         <input
           type="checkbox"
           name="post[sub_ids][]"
           value="<%= sub.id %>">
         <%= sub.title %>
       </label>
       <br>
     <% end %>


    <input type="submit" name="" value="Post">

  </form>
